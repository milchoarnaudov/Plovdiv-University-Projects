@page
@model AutoParts4Sale.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Autopart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Autopart.Id" />
            <div class="form-group">
                <label asp-for="Autopart.Name" class="control-label"></label>
                <input asp-for="Autopart.Name" class="form-control" />
                <span asp-validation-for="Autopart.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autopart.Price" class="control-label"></label>
                <input asp-for="Autopart.Price" class="form-control" />
                <span asp-validation-for="Autopart.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-lg" asp-page="./Index"><i class="fas fa-arrow-left"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
