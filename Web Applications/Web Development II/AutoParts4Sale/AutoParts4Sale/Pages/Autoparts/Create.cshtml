@page
@model AutoParts4Sale.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Autopart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Autopart.Name" class="control-label"></label>
                <input asp-for="Autopart.Name" class="form-control" />
                <span asp-validation-for="Autopart.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autopart.Price" class="control-label"></label>
                <input asp-for="Autopart.Price" class="form-control" />
                <span asp-validation-for="Autopart.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autopart.CarMake" class="control-label">Choose Car Make</label>
                <select class="form-group" asp-for="CarMakeId" asp-items="Model.CarMakes">
                </select>
                <span asp-validation-for="CarMakeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Choose Car Model</label>
                <select class="form-group" asp-for="CarModelId" asp-items="Model.CarModels">
                </select>
                <span asp-validation-for="CarModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autopart.Category" class="control-label">Choose Auto Part Category</label>
                <select class="form-group" asp-for="CategoryId" asp-items="Model.Categories">
                </select>
                <span asp-validation-for="CarMakeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-lg" asp-page="./Index"><i class="fas fa-arrow-left"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    document.getElementById('CarMakeId').addEventListener('change', (e) => {
        document.getElementById('CarModelId').innerHTML = "<option disabled value=''>Select Car Model</option>";
        fetch(`?handler=SubCategories&carMakeId=${e.target.value}`)
            .then((response) => {
                console.log(response);
                return response.json();
            })
            .then((data) => {
                Array.prototype.forEach.call(data, function (item, i) {
                    console.log(item);
                    document.getElementById('CarModelId').innerHTML += `<option value="${item.id}">${item.name}</option>`
                });
            });
    });
</script>
}
